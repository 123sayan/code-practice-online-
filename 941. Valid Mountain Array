class Solution {
    public boolean validMountainArray(int[] arr) {
        int n=arr.length;
        if(n<=2)
        {
            return false;
        }    
        int count=0;
        for(int i=0;i<n-1;i++)
        {
            if(arr[i]<arr[i+1] && i+1!=n )
            {
                count++;
            } 
           else
           {
            break;
           }
           
        }
    if(count==n-1 || count==0)
    {
        return false;
    }
       for(int i=count;i<=n-2;i++)
        {
            if(arr[i]>arr[i+1])
            {
                continue;
            }
            else
            {
                return false;
            }
        }
        return true;
    }
}
